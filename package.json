{
  "name": "ultra",
  "version": "0.2.1",
  "description": "Generic pushstate router for React and other component-based frameworks.",
  "main": "./lib/ultra.js",
  "module": "./lib/ultra.es.js",
  "scripts": {
    "test": "cross-env BABEL_ENV=test jest --useStderr",
    "cover": "cross-env BABEL_ENV=test jest --coverage",
    "format": "prettier --no-semi --single-quote --print-width 100 --write \"{src,test}/**/*.js\"",
    "lint": "npm run format && eslint -c ./config/eslint/.eslintrc.json --ignore-path .gitignore src/**",
    "build": "rollup -c && rollup -c --environment DIST",
    "prepublish": "npm run build"
  },
  "repository": "react-circuit/ultra",
  "author": "Ankit Patel <gt3.someday@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-babili": "^1.0.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "jest": "^19.0.2",
    "prettier": "^1.1.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-babili": "^2.0.0"
  },
  "jest": {
    "testRegex": "(/test/.*\\.test\\.js$)",
    "testEnvironment": "node"
  },
  "dependencies": {
    "warning": "^3.0.0"
  },
  "files": [
    "dist",
    "lib"
  ]
}
